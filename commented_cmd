echo hello world # Hello world!
ls # list
ls -a # this script contains commented commands
echo single commands #test
mkdir test # making a director
echo created test directory && ls -l # comments with mutliple commands
touch test_file.txt #creates file
echo created; echo test_file.txt ##### another test on comments
cat test_file.txt
echo printed test file (it's empty so nothing will show)
ls -l
rm -rf test # removes directory
rm  test_file.txt # removes file
echo removed test && echo directory/file # prints both statements
ps
echo test complete # here ends commented commands test
exit

